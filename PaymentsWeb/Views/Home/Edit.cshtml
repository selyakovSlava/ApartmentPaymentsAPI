@{
    ViewData["Title"] = "Изменение платежа";
}

@model APModelsLibrary.Models.PaymentModel

<h1>Изменение платежа</h1>

<form asp-controller="Home" asp-action="Edit" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Period">Период</label><br />
        <input type="text" asp-for="Period" />
    </p>
    <p>
        <label asp-for="TotalSum">Общая сумма</label><br />
        <input type="number" asp-for="TotalSum" required placeholder="введите сумму" step="0.01" />
    </p>
    <p>
        <input type="submit" value="Сохранить" class="btn btn-success" />
    </p>
</form>